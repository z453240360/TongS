<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ke_hu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dongdong.myview.activity.KeHuActivity">

    <RadioGroup
        android:id="@+id/mRg_kehu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mRb_shouye_kehu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/daijinjian"
            android:gravity="center"
            android:tag="0"
            android:text="待进件"
            android:textColor="@drawable/radiobuttoncolor"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/mRb_xiaoxi_kehu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/yijinjian"
            android:gravity="center"
            android:tag="1"
            android:text="已进件"
            android:textColor="@drawable/radiobuttoncolor2"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/mRb_gengduo_kehu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/yifangkuan"
            android:gravity="center"
            android:tag="2"
            android:text="已放款"
            android:textColor="@drawable/radiobuttoncolor2"
            android:textSize="15sp" />
    </RadioGroup>

    <android.support.v7.widget.SearchView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/mRg_kehu"
        android:id="@+id/searchView"

        android:drawingCacheQuality="auto"
        android:queryHint="搜索"
        android:background="@drawable/yuanjiao"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <FrameLayout
        android:id="@+id/mFl_kehu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchView" />

</RelativeLayout>
